{
  "version": "1.0",
  "description": "MCP Servers configuration for intelligent agents ecosystem",
  "servers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "description": "Context7 MCP Server - Up-to-date code documentation for libraries",
      "auth": {
        "type": "header",
        "header": "CONTEXT7_API_KEY",
        "value": "${CONTEXT7_API_KEY}"
      },
      "tools": ["resolve-library-id", "get-library-docs"],
      "categories": ["code_analysis", "documentation"],
      "enabled": true
    },
    "leetcode": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@jinzcdev/leetcode-mcp-server",
        "--site",
        "global",
        "--session",
        "${LEETCODE_SESSION}"
      ],
      "env": {
        "LEETCODE_SITE": "global"
      },
      "description": "LeetCode MCP Server - Programming problems, solutions, and user data",
      "tools": [
        "get_daily_challenge",
        "get_problem", 
        "search_problems",
        "get_user_profile",
        "get_recent_ac_submissions",
        "list_problem_solutions",
        "get_problem_solution"
      ],
      "categories": ["coding", "algorithms", "education"],
      "enabled": true
    },
    "docling": {
      "type": "http",
      "url": "${DOCLING_MCP_URL}",
      "enabled": true,
      "description": "Docling MCP Server for document extraction and analysis",
      "tools": ["extract_document", "convert_file", "analyze_structure", "get_extraction_stats"],
      "categories": ["document_extraction", "content_analysis"],
      "auth": {
        "type": "header",
        "header": "X-API-Key",
        "value": "${DOCLING_API_KEY}"
      }
    },
    "supabase-vector": {
      "type": "http", 
      "url": "${SUPABASE_MCP_URL}",
      "enabled": false,
      "description": "Supabase Vector Operations MCP Server (optional)",
      "tools": ["search_similarity", "insert_embedding", "analyze_vectors", "check_index_health"],
      "categories": ["vector_operations", "embedding_analysis"],
      "auth": {
        "type": "bearer",
        "token": "${SUPABASE_SERVICE_ROLE_KEY}"
      }
    }
  },
  "routing": {
    "code_analysis": ["context7"],
    "documentation": ["context7"],
    "coding": ["leetcode"],
    "algorithms": ["leetcode"],
    "education": ["leetcode"],
    "document_extraction": ["docling"],
    "content_analysis": ["docling"],
    "vector_operations": ["supabase-vector"],
    "embedding_analysis": ["supabase-vector"]
  }
}